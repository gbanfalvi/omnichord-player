{
    "compilerOptions": {
      "downlevelIteration": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "ES2016",
      "sourceMap": true,
      "declaration": true,
      "lib": [
        "ES2016",
        "DOM",
        "DOM.Iterable"
      ],
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "jsx": "react",
      "jsxFactory": "h"
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      ".git",
      "node_modules"
    ]
}